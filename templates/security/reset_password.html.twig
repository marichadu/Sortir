{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe - Sortir.com{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header">
                        <h1 class="h3 mb-0">Réinitialiser le mot de passe</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(resetForm) }}
                            <div class="mb-3">
                                {{ form_row(resetForm.plainPassword) }}
                            </div>

                            <div class="d-grid">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-key"></i> Réinitialiser le mot de passe
                                </button>
                            </div>
                        {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 