{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h1 class="h4 mb-0">
                            <i class="fas fa-user-edit me-2"></i>Modifier un utilisateur
                        </h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(registrationForm, {
                            'attr': {
                                'class': 'needs-validation',
                                'novalidate': 'novalidate',
                                'id': 'edit-user-form'
                            }
                        }) }}
                            <div class="row g-3">
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.pseudo, {
                                        'label': 'Pseudo',
                                        'label_attr': {'class': 'form-label fw-bold'},
                                        'attr': {'class': 'form-control'}
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.prenom, {
                                        'label': 'Prénom',
                                        'label_attr': {'class': 'form-label fw-bold'},
                                        'attr': {'class': 'form-control'}
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.nom, {
                                        'label': 'Nom',
                                        'label_attr': {'class': 'form-label fw-bold'},
                                        'attr': {'class': 'form-control'}
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.telephone, {
                                        'label': 'Téléphone',
                                        'label_attr': {'class': 'form-label fw-bold'},
                                        'attr': {'class': 'form-control'}
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.email, {
                                        'label': 'Email',
                                        'label_attr': {'class': 'form-label fw-bold'},
                                        'attr': {'class': 'form-control'}
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.campus, {
                                        'label': 'Campus',
                                        'label_attr': {'class': 'form-label fw-bold'},
                                        'attr': {'class': 'form-select'}
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.roles, {
                                        'label': 'Rôle',
                                        'label_attr': {'class': 'form-label fw-bold'},
                                        'attr': {'class': 'form-select'},
                                        'expanded': false,
                                        'multiple': false
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.plainPassword, {
                                        'label': 'Mot de passe',
                                        'label_attr': {'class': 'form-label fw-bold'},
                                        'attr': {'class': 'form-control'},
                                        'help': 'Laissez vide pour ne pas modifier le mot de passe'
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check form-switch">
                                        {{ form_widget(registrationForm.actif, {
                                            'attr': {'class': 'form-check-input'}
                                        }) }}
                                        {{ form_label(registrationForm.actif, 'Actif', {
                                            'label_attr': {'class': 'form-check-label fw-bold'}
                                        }) }}
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a href="{{ path('admin_users_index') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Retour
                                </a>
                                <button type="submit" class="btn btn-primary" id="submit-button">
                                    <i class="fas fa-save me-2"></i>Enregistrer
                                </button>
                            </div>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .form-control:focus, .form-select:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
        }
        .form-label {
            color: #495057;
        }
        .card {
            border: none;
            border-radius: 0.5rem;
        }
        .card-header {
            border-radius: 0.5rem 0.5rem 0 0;
        }
        .form-check-input:checked {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
        .form-check.form-switch {
            padding-left: 2.5em;
        }
        .form-check-input {
            width: 2em;
            margin-left: -2.5em;
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('edit-user-form');
            const submitButton = document.getElementById('submit-button');

            form.addEventListener('submit', function(e) {
                e.preventDefault();
                submitButton.disabled = true;
                submitButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Enregistrement...';
                
                // Submit the form after a short delay to allow the button state to update
                setTimeout(() => {
                    form.submit();
                }, 100);
            });
        });
    </script>
{% endblock %} 