{% extends 'base.html.twig' %}

{% block title %}Administration - Sortir.com{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mb-4">
            <div class="col">
                <h1>Administration</h1>
            </div>
        </div>

        {# Menu d'administration #}
        <div class="row mb-4">
            <div class="col">
                <div class="list-group">
                    <a href="{{ path('app_admin_users') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fas fa-users"></i>
                            Gestion des Utilisateurs
                        </div>
                        <span class="badge bg-primary rounded-pill">{{ total_users }}</span>
                    </a>
                    <a href="{{ path('app_admin_sorties') }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            <i class="fas fa-calendar-alt"></i>
                            Gestion des Sorties
                        </div>
                        <span class="badge bg-primary rounded-pill">{{ total_sorties }}</span>
                    </a>
                    <a href="{{ path('app_campus_index') }}" class="list-group-item list-group-item-action">
                        <i class="fas fa-university"></i>
                        Gestion des Campus
                    </a>
                    <a href="{{ path('app_ville_index') }}" class="list-group-item list-group-item-action">
                        <i class="fas fa-city"></i>
                        Gestion des Villes
                    </a>
                </div>
            </div>
        </div>

        {# Statistiques #}
        <div class="row">
            <div class="col-md-3">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Utilisateurs actifs</h5>
                        <p class="card-text display-4">{{ active_users }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Sorties</h5>
                        <p class="card-text display-4">{{ total_sorties }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-info mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Campus</h5>
                        <p class="card-text display-4">{{ total_campus }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Villes</h5>
                        <p class="card-text display-4">{{ total_villes }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 